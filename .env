N8N_BASIC_AUTH_PASSWORD=Jantete2007!

# -------------------------------
# BASE DE DATOS NEON (PostgreSQL)
# -------------------------------

# Tipo de base de datos
DB_TYPE=postgresdb

# Cadena de conexión completa de Neon.tech
DB_POSTGRESDB_CONNECTION_URL=postgresql://neondb_owner:npg_br0gl7twQxyq@ep-sparkling-violet-abt21ufj-pooler.eu-west-2.aws.neon.tech/neondb?sslmode=require&channel_binding=require

